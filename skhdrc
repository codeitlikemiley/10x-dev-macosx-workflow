# TODO https://github.com/koekeishiya/yabai/issues/725

# Combinations of Keys
# lctrl + alt + cmd === TAB KEY , configured with Karaabiner-Elements
# lctrl + alt + cmd + shift === HYPER , configured with Karaabiner-Elements

# focus window === TAB KEY + [Y,U,I,O]
lctrl + alt + cmd - y : yabai -m window --focus west
lctrl + alt + cmd - u : yabai -m window --focus south
lctrl + alt + cmd - i : yabai -m window --focus north
lctrl + alt + cmd - o : yabai -m window --focus east

# toggle window fullscreen zoom
lctrl + alt + cmd - z : yabai -m window --toggle zoom-fullscreen

# toggle padding and gap
lctrl + alt + cmd - d : yabai -m space --toggle padding; yabai -m space --toggle gap

# float / unfloat window and center on screen
lctrl + alt + cmd - w : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2


# toggle window split type
lctrl + alt + cmd - s : yabai -m window --toggle split

# balance size of windows
lctrl + alt + cmd - 0 : yabai -m space --balance



# move managed window === HYPER + [Y,U,I,O]
lctrl + alt + cmd + shift - y : yabai -m window --warp west
lctrl + alt + cmd + shift - u : yabai -m window --warp south
lctrl + alt + cmd + shift - i : yabai -m window --warp north
lctrl + alt + cmd + shift - o : yabai -m window --warp east



# Resize windows
shift + alt - y : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
shift + alt - u : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
shift + alt - i : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
shift + alt - o : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# switching to desktop is set on Settings->Keyboard->Mission Control ->Mission Control
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space 9; yabai -m space --focus 9


